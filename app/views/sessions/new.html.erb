<h1>Log in</h1>

<!-- Note that the form uses form_tag
	rather than form_for as weâ€™re not editing a resource here. -->
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= email_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
