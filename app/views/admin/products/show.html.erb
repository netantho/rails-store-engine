<p id="notice"><%= notice %></p>

<p><strong>Title:</strong> <%= @admin_product.title %></p>
<p><strong>Categories:</strong> <%= @admin_product.categories.join(', ') %></p>
<% unless @admin_product.photo.nil? %>
	<img src="<%= @admin_product.photo %>" width="300"/>
<% end %>
<p><strong>Description:</strong><br /> <%= @admin_product.description%></p>
<p><strong>Price:</strong> <%= @admin_product.price %></p>
<p><strong>Visible:</strong> <%= @admin_product.visible %></p>

<%= link_to 'Destroy', admin_product_path(@admin_product), method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Edit', edit_admin_product_path(@admin_product) %> |
<%= link_to 'Back', admin_products_path %>
