<%= form_for([:admin, @admin_product]) do |f| %>
  <% if @admin_product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_product.errors.count, "error") %> prohibited this admin_product from being saved:</h2>

      <ul class="unstyled">
      <% @admin_product.errors.full_messages.each do |msg| %>
        <li class="alert alert-error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :categories %>
		<% Category.all.each do |category| %>
			<label><%= check_box_tag :categories, category.id, @admin_product.categories.include?(category), :id => 'product_categories', :name => 'product[category_ids][]' %> <%= category.title %></label>
		<% end %>
	</p>
	<p>
		<%= f.label :photo %>
		<%= f.text_field :photo %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description, rows: 5 %>
	</p>
	<p>
		<%= f.label :price %>
		<%= f.number_field :price %>
	</p>
	<p>
		<%= f.label :visible %>
		<%= f.check_box :visible %>
	</p>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
