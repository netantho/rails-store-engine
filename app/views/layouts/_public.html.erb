<% content_for :menu do %>
	<div class="navbar">
	  <div class="navbar-inner">
	    <a class="brand" href="#">StoreEngine</a>
	    <ul class="nav">
	      <li><a href="<%= root_path %>">Home</a></li>
		  <li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown">
			  Categories
			  <b class="caret"></b>
			</a>
			<ul class="dropdown-menu">
				<% categories.each do |category| %>
					<li><%= link_to category %></li>
				<% end %>
			</ul>
		  </li>
	    </ul>
	    <ul class="nav pull-right">
	    	<li><a href="<%= cart_path %>">Cart: 0 items</a></li>
	    	<% if current_admin? %>
	    		<li><a href="<%= admin_products_path %>">Admin</a></li>
	    	<% end %>
	    	<% if current_user %>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						Logged as
						<% if current_user.display_name.nil? %>
							<%= current_user.full_name %>
						<% else %>
							<%= current_user.display_name %>
						<% end %>
						<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li><a href="<%= logout_path %>">Logout</a></li>
					</ul>
				</li>
			<% else %>
				<li><a href="<%= register_path %>">Register</a></li>
				<li><a href="<%= login_path %>">Log in</a></li>
			<% end %>
	    </ul>
	  </div>
	</div>
<% end %>
<%= render :template => 'layouts/application' %>
